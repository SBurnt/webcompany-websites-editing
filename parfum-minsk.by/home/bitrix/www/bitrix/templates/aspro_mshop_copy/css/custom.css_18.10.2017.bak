.catalog_block .catalog_item_wrapp {
    width: 23%;
    width: 210px;
    float: left;
    padding-bottom: 40px;
    white-space: normal;
    display: inline-block;
    margin: 5px;
    vertical-align: top;
    border: 1px solid #cacacd;
}


.description_block_custom {
    height:40px;
    overflow: hidden;
    margin-bottom: 10px;
}
.cat_desc_more  {
    display: block;
    margin-bottom: 20px;
    color: #c50026;
    cursor: pointer;
}

ul.menu li .child ul  {
    width: 12%!important;
}

.item-stock {
    display: none;
}


